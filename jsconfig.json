{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["app/*"],
      "@controllers/*": ["app/controllers/*"],
      "@middleware/*": ["app/middleware/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@utils/*": ["app/utils/*"],
      "@views/*": ["app/views/*"],
      "@test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules"]
}
