{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["app/*"],
      "@controllers/*": ["app/controllers/*"],
      "@middleware/*": ["app/middleware/*"],
      "@models/*": ["app/models/*"],
      "@services/*": ["app/services/*"],
      "@utils/*": ["app/utils/*"],
      "@views/*": ["app/views/*"],
      "@config/*": ["config/*"],
      "@server": ["server.js"],
      "@test/*": ["test/*"],
      "@cypress/*": ["test/cypress/*"]
    }
  },
  "exclude": ["node_modules"]
}
