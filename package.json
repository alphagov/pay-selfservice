{
  "name": "pay-selfservice",
  "description": "Payments Selfservice application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^18.20.4"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "start:dev": "nodemon -e js,njk -r dotenv/config start-dev.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "grunt watch",
    "lint": "standard --fix",
    "lint-sass": "stylelint '**/*.scss'",
    "test": "rm -rf ./pacts && NODE_ENV=test mocha '!(node_modules)/**/*.test'.js",
    "test:no-pact": "rm -rf ./pacts && NODE_ENV=test mocha --exclude **/*.pact.test.js '!(node_modules)/**/*.test'.js",
    "test:pact": "rm -rf ./pacts && NODE_ENV=test mocha **/*.pact.test.js",
    "cypress:server": "mb --debug | node --inspect -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "cypress:test-no-watch": "cypress open --config watchForFileChanges=false",
    "publish-pacts": "./bin/publish-pacts.js",
    "snyk-protect": "exit 0; #no-op for ci"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "overrides": {
    "minimist": "1.2.6",
    "qrcode": {
      "ansi-regex": "3.0.1"
    },
    "grunt-contrib-copy": {
      "ansi-regex": "3.0.1"
    },
    "cli-color": {
      "ansi-regex": "3.0.1"
    },
    "mountebank-formatters": {
      "ejs": "3.1.8"
    }
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "^6.0.6",
    "@govuk-pay/pay-js-metrics": "^1.0.6",
    "@sentry/node": "6.12.0",
    "accessible-autocomplete": "2.0.4",
    "aws-sdk": "2.1440.0",
    "axios": "^1.7.4",
    "body-parser": "1.20.2",
    "change-case": "3.1.0",
    "check-types": "11.2.x",
    "chokidar": "^3.5.3",
    "client-sessions": "0.8.0",
    "common-password": "0.1.2",
    "connect-flash": "0.1.1",
    "cookie-parser": "1.4.x",
    "csurf": "^1.11.0",
    "express": "4.19.x",
    "google-libphonenumber": "3.2.33",
    "govuk-frontend": "^4.8.0",
    "http-proxy": "1.18.x",
    "https-proxy-agent": "5.0.1",
    "joi": "17.12.1",
    "lodash": "4.17.21",
    "luhn-js": "^1.1.2",
    "minimist": "1.2.6",
    "moment-timezone": "0.5.43",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "nunjucks": "3.2.4",
    "passport": "0.5.x",
    "passport-custom": "1.1.1",
    "passport-local": "1.0.0",
    "qrcode": "1.5.3",
    "qs": "6.11.2",
    "rfc822-validate": "1.0.0",
    "serve-favicon": "2.5.0",
    "staticify": "5.0.0",
    "stripe": "^10.12.0",
    "throng": "5.0.x",
    "uk-postcode": "0.1.x",
    "url-join": "4.0.1",
    "validator": "^13.11.0",
    "winston": "3.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.22.10",
    "@pact-foundation/pact": "^12.1.1",
    "@pact-foundation/pact-core": "^14.0.5",
    "chai": "4.3.8",
    "chai-arrays": "2.2.0",
    "chai-as-promised": "7.1.1",
    "cheerio": "1.0.0-rc.12",
    "chokidar-cli": "*",
    "csrf": "^3.1.0",
    "cypress": "^13.8.0",
    "dotenv": "16.3.1",
    "gaap-analytics": "3.1.0",
    "grunt": "1.6.x",
    "grunt-babel": "8.0.0",
    "grunt-browserify": "6.0.0",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "5.2.2",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "3.1.0",
    "html5shiv": "3.7.x",
    "jsdom": "^21.1.1",
    "lint-staged": "14.0.1",
    "mocha": "^10.2.0",
    "mountebank": "^2.8.2",
    "nock": "13.3.3",
    "nodemon": "3.0.1",
    "notp": "2.0.3",
    "nunjucksify": "2.2.0",
    "portfinder": "1.0.32",
    "proxyquire": "~2.1.0",
    "sass": "^1.66.1",
    "sinon": "15.2.0",
    "standard": "12.0.1",
    "stylelint": "^15.10.3",
    "stylelint-config-gds": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "supertest": "^6.3.3"
  }
}
