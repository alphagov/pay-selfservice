{
  "name": "pay-selfservice",
  "description": "Payments Selfservice application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^12.18.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "start:dev": "nodemon -e js,njk -r dotenv/config start-dev.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard --fix",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test": "rm -rf ./pacts && NODE_ENV=test ./node_modules/mocha/bin/mocha --exclude **/*.cy.test.js '!(node_modules)/**/*.test'.js",
    "cypress:server": "mb --debug | DISABLE_APPMETRICS=true node --inspect -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "publish-pacts": "./bin/publish-pacts.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "2.37.0",
    "@pact-foundation/pact": "9.8.0",
    "@sentry/node": "5.23.0",
    "accessible-autocomplete": "2.0.3",
    "appmetrics": "5.1.1",
    "appmetrics-statsd": "3.0.0",
    "aws-sdk": "2.751.0",
    "aws-xray-sdk": "2.5.0",
    "body-parser": "1.19.0",
    "change-case": "3.1.0",
    "check-types": "11.1.x",
    "client-sessions": "0.8.0",
    "common-password": "0.1.2",
    "connect-flash": "0.1.1",
    "continuation-local-storage": "3.2.1",
    "cookie-parser": "1.4.x",
    "correlation-id": "3.1.1",
    "csrf": "3.1.x",
    "express": "4.17.x",
    "google-libphonenumber": "3.2.13",
    "govuk-frontend": "3.7.0",
    "http-proxy": "1.18.x",
    "https-proxy-agent": "5.0.0",
    "joi": "14.3.1",
    "lodash": "4.17.20",
    "minimist": "1.2.x",
    "moment-timezone": "0.5.31",
    "morgan": "1.10.0",
    "node-zendesk": "2.0.1",
