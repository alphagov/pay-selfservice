{
  "name": "pay-selfservice",
  "description": "Payments Selfservice application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^16.17.1"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "start:dev": "nodemon -e js,njk -r dotenv/config start-dev.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard --fix",
    "lint-sass": "stylelint '**/*.scss'",
    "test": "rm -rf ./pacts && NODE_ENV=test ./node_modules/mocha/bin/mocha --exclude **/*.cy.test.js '!(node_modules)/**/*.test'.js",
    "test:no-pact": "rm -rf ./pacts && NODE_ENV=test ./node_modules/mocha/bin/mocha --exclude '**/*+(.cy|.pact)'.test.js '!(node_modules)/**/*.test'.js",
    "test:pact": "rm -rf ./pacts && NODE_ENV=test ./node_modules/mocha/bin/mocha **/*.pact.test.js",
    "cypress:server": "mb --debug | node --inspect -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "cypress:test-no-watch": "cypress open --config watchForFileChanges=false",
    "publish-pacts": "./bin/publish-pacts.js",
    "snyk-protect": "exit 0; #no-op for ci"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "overrides": {
    "minimist": "1.2.6"
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "3.8.0",
    "@sentry/node": "6.12.0",
    "accessible-autocomplete": "2.0.4",
    "aws-sdk": "2.1227.0",
    "body-parser": "1.20.1",
    "change-case": "3.1.0",
    "check-types": "11.1.x",
    "chokidar": "^3.5.3",
    "client-sessions": "0.8.0",
    "common-password": "0.1.2",
    "connect-flash": "0.1.1",
    "cookie-parser": "1.4.x",
    "correlation-id": "4.0.0",
    "csurf": "^1.11.0",
    "express": "4.18.x",
    "google-libphonenumber": "3.2.31",
    "govuk-frontend": "3.14.0",
    "http-proxy": "1.18.x",
    "https-proxy-agent": "5.0.1",
    "joi": "14.3.1",
    "lodash": "4.17.21",
    "minimist": "1.2.6",
    "moment-timezone": "0.5.37",
    "morgan": "1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-zendesk": "2.2.0",
    "nunjucks": "3.2.3",
    "passport": "0.5.x",
    "passport-custom": "1.1.1",
    "passport-local": "1.0.0",
    "qrcode": "1.5.1",
    "qs": "6.11.0",
    "request": "2.88.2",
    "request-promise-native": "1.0.9",
    "rfc822-validate": "1.0.0",
    "serve-favicon": "2.5.0",
    "staticify": "5.0.0",
    "stripe": "^10.12.0",
    "throng": "5.0.x",
    "uk-postcode": "0.1.x",
    "url-join": "4.0.1",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.19.1",
    "@pact-foundation/pact": "^9.18.1",
    "@pact-foundation/pact-node": "10.17.6",
    "chai": "4.3.6",
    "chai-arrays": "2.2.0",
    "chai-as-promised": "7.1.1",
    "cheerio": "1.0.0-rc.12",
    "chokidar-cli": "latest",
    "csrf": "^3.1.0",
    "cypress": "5.0.0",
    "dotenv": "16.0.3",
    "envfile": "5.2.0",
    "gaap-analytics": "3.1.0",
    "grunt": "1.5.x",
    "grunt-babel": "8.0.0",
    "grunt-browserify": "6.0.0",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "5.2.2",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "3.1.0",
    "html5shiv": "3.7.x",
    "jsdom": "^20.0.1",
    "lint-staged": "13.0.3",
    "mocha": "^6.2.3",
    "mountebank": "^2.8.1",
    "nock": "13.2.9",
    "nodemon": "2.0.20",
    "notp": "2.0.3",
    "nunjucksify": "2.2.0",
    "portfinder": "1.0.32",
    "proxyquire": "~2.1.0",
    "sass": "^1.55.0",
    "sinon": "14.0.1",
    "standard": "12.0.1",
    "stylelint": "^14.13.0",
    "stylelint-config-gds": "^0.2.0",
    "stylelint-order": "^5.0.0",
    "supertest": "^6.3.0"
  }
}
