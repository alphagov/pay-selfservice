{
  "name": "pay-selfservice",
  "description": "Payments Selfservice application",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">8.11.3"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "cy",
      "Cypress"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start-local": "nodemon -e njk start.js",
    "start-debug": "node start.js --inspect",
    "start": "node start.js",
    "watch": "chokidar app test *.js --initial -c 'npm run test'",
    "watch-live-reload": "./node_modules/.bin/grunt watch",
    "lint": "./node_modules/.bin/standard",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test": "npm run snyk-protect && rm -rf ./pacts && ./node_modules/mocha/bin/mocha '!(node_modules)/**/*+(.|_)+(test|tests)'.js",
    "pact-stub": "docker run -t -p 8000:8000 -v \"$(pwd)/pacts/:/app/pacts\" pactfoundation/pact-stub-server -p 8000 -d pacts",
    "cypress:server": "node --inspect -r dotenv/config start.js dotenv_config_path=test/cypress/test.env",
    "cypress:test": "cypress run",
    "cypress:test-headed": "cypress open",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "publish-pacts": "./bin/publish-pacts.js"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "assets/*",
      "browsered/*",
      "Gruntfile.js",
      "app/browsered.js",
      "public/js/*"
    ]
  },
  "dependencies": {
    "accessible-autocomplete": "^1.6.2",
    "appmetrics": "3.x",
    "appmetrics-statsd": "2.0.x",
    "aws-xray-sdk": "^2.1.0",
    "body-parser": "1.18.3",
    "change-case": "3.0.2",
    "check-types": "^7.3.x",
    "client-sessions": "^0.8.0",
    "common-password": "^0.1.2",
    "connect-flash": "^0.1.1",
    "continuation-local-storage": "^3.2.1",
    "cookie-parser": "1.4.x",
    "correlation-id": "^3.0.2",
    "csrf": "3.0.x",
    "express": "4.16.x",
    "govuk-frontend": "^2.4.1",
    "hogan.js": "3.0.x",
    "http-proxy": "1.17.x",
    "json2csv": "4.3.x",
    "lodash": "4.17.11",
    "minimist": "1.2.x",
    "moment-timezone": "^0.5.23",
    "morgan": "^1.9.1",
    "node-zendesk": "^1.4.0",
    "notp": "^2.0.3",
    "nunjucks": "^3.1.6",
    "passport": "0.4.x",
    "passport-custom": "^1.0.5",
    "passport-local": "^1.0.0",
    "qrcode": "1.3.2",
    "qs": "^6.6.0",
    "readdir": "0.1.x",
    "requestretry": "^1.13.0",
    "rfc822-validate": "^1.0.0",
    "serve-favicon": "2.5.0",
    "slugify": "^1.3.4",
    "staticify": "3.2.0",
    "throng": "4.0.x",
    "tunnel": "0.0.6",
    "uk-postcode": "0.1.x",
    "url-join": "4.0.0",
    "winston": "2.4.x"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@pact-foundation/pact-node": "6.20.2",
    "chai": "^4.2.0",
    "chai-arrays": "^2.0.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "cheerio": "^1.0.0-rc.2",
    "chokidar-cli": "latest",
    "cypress": "^3.1.4",
    "dotenv": "^6.2.0",
    "envfile": "^2.3.0",
    "errorhandler": "^1.5.0",
    "express-writer": "0.0.4",
    "fresh-require": "^1.0.3",
    "gaap-analytics": "^3.0.0",
    "grunt": "1.0.x",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^5.3.0",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^4.0.0",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "3.0.x",
    "html5shiv": "3.7.x",
    "mocha": "^5.1.1",
    "nock": "^10.0.5",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "nunjucksify": "^2.2.0",
    "nyc": "^11.8.0",
    "pact": "4.3.2",
    "portfinder": "^1.0.20",
    "proxyquire": "~2.1.0",
    "sass-lint": "^1.12.1",
    "sinon": "^7.2.2",
    "snyk": "^1.119.0",
    "standard": "^12.0.1",
    "start-server-and-test": "^1.7.11",
    "superagent": "^4.1.0",
    "supertest": "^3.3.0",
    "supertest-session": "^3.2.0"
  },
  "snyk": true
}
