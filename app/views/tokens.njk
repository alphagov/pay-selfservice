{% extends "./layout.njk" %}

{% block page_title %}
API Keys - {{currentServiceName}} {{currentGatewayAccount.full_type}} - GOV.UK Pay
{% endblock %}

{% block pageSpecificJS %}
<script src="/public/js/devtokens.js"></script>
{% endblock %}

{% block side_navigation %}
  {% include "includes/side_navigation.njk" %}
{% endblock %}

{% block mainContent %}
<div class="column-two-thirds">
  <h1 class="page-title">API Keys</h1>
  <ul class="tabs">
    {% if active %}
    <li class="current">Active keys</li>
    <li><a href="{{ routes.apiKeys.revoked }}">Revoked keys</a></li>
    {% else %}
    <li><a href="{{ routes.apiKeys.index }}">Active keys</a></li>
    <li class="current">Revoked keys</li>
    {% endif %}
  </ul>

  {% include "./includes/_token_list.njk" %}
</div>
{% endblock %}
