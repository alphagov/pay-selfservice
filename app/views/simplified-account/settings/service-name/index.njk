{% extends "../../../layout.njk" %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% block pageTitle %}
  Settings - Service name
{% endblock %}

{% block side_navigation %}
  {% include "../_settings-navigation.njk" %}
{% endblock %}

{% set add_cy_link %}
  <a class='govuk-link govuk-link--no-visited-state' href='{{ manage_cy }}'>Add Welsh service name</a>
{% endset %}

{% block mainContent %}
  <div class="govuk-grid-column-three-quarters">
    <h2 class="govuk-heading-l">Service name</h2>

    {{ govukSummaryList({
      classes: "govuk-!-margin-bottom-9",
      rows: [
        {
          key: {
          text: "Service name"
        },
          value: {
          text: service_name_en
        },
          actions: {
          items: [
            {
              href: manage_en,
              text: "Change",
              classes: "govuk-link--no-visited-state",
              visuallyHiddenText: "Edit English service name"
            }
          ]
        }
        },
        {
          key: {
          text: "Welsh service name"
        },
          value: {
          html: service_name_cy | default(add_cy_link)
        },
          actions: {
          items: [
            {
              href: manage_cy,
              text: "Change",
              classes: "govuk-link--no-visited-state",
              visuallyHiddenText: "Edit Welsh service name"
            } if service_name_cy else {}
          ]
        }
        }
      ]
    }) }}
  </div>
{% endblock %}
