<li class="service--{{ account.type }}">
  <form method="post" action="{{routes.serviceSwitcher.switch}}" novalidate>
    <input name="csrfToken" type="hidden" value="{{csrf}}" />
    <input name="gatewayAccountId" type="hidden" value="{{ account.id }}"/>
    <input name="gatewayAccountExternalId" type="hidden" value="{{ account.external_id }}"/>
    <button
      class="govuk-link pay-button--as-link service-switcher {{ account.type }} {{ account.payment_provider }}"
      type="submit"
      role="link">
      {{ account.type | title }}
      {% if account.type === 'live' %}
          card account
      {% else %}
        account ({{ account.payment_provider }})
      {% endif %}
    </button>
    {% if account.provider_switch_enabled and service.isAdminUser %}
      <strong class="service-info--tag govuk-tag govuk-tag--blue">switch PSP</strong>
    {% endif %}
  </form>
</li>
