{% extends "../layout-logged-out.njk" %}
{% from "../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  Create a new password - GOV.UK Pay
{% endblock %}

{% block mainContent %}
<div class="govuk-grid-column-two-thirds">
  {{ errorSummary ({
    errors: errors,
    hrefs: {
      password: '#password'
    }
  }) }}

  <form action="/reset-password/{{id}}"method="post" class="form submit-new-password">
    <input id="csrf" name="csrfToken" type="hidden" value="{{csrf}}" />
    <h1 class="govuk-heading-l page-title">
      Create a new password
    </h1>
    <p class="govuk-body">
      You can now create a new password for your account.
    </p>

    {{ govukInput({
        label: {
          text: "Password"
        },
        id: "password",
        name: "password",
        classes: "govuk-!-width-two-thirds",
        type: "password",
        autocomplete: "new-password",
        errorMessage: { text: errors.password } if errors.password else false
      })
    }}

    {{ govukButton({
       text: "Continue",
       attributes: {
         id: "continue"
       }
     }) }}
  </form>
</div>
{% endblock %}
