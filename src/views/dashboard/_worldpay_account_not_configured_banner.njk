{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% if isAdminUser and worldpayAccountAndSetupIncomplete %}
  <div class="govuk-grid-column-full">
    {% set html %}

      <p class="govuk-notification-banner__heading">
        You have not finished setting up your account
      </p>

      <p class="govuk-body">
        You need to
        <a id="connect-worldpay-account" class="govuk-notification-banner__link"
           href="{{ configurePSPAccountLink }}">
          connect your Worldpay account to GOV.UK Pay</a> to be able to take payments.
      </p>
    {% endset %}

    {{ govukNotificationBanner({
      html: html
    }) }}
  </div>
{% endif %}
