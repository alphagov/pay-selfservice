{% set cardMap = {
  'visa': '/assets/images/card_visa.png',
  'master-card': '/assets/images/card_mastercard.png',
  'american-express': '/assets/images/card_amex.png',
  'unknown': '/assets/images/card_unknown.png'
} %}

{% macro paymentInstrument(instrument) %}
  {% set cardDetails = instrument.cardDetails %}
  <span>
    {% set imageUrl = cardMap[cardDetails.cardBrand | lower] or cardMap.unknown %}
    <img src="{{ imageUrl }}" alt="Card brand {{ cardDetails.cardBrand }}" height="22" class="govuk-!-padding-bottom-1" style="vertical-align: middle"></img>
    <span class="govuk-!-margin-right-1 govuk-!-margin-left-1"> ••••{{ cardDetails.lastDigitsCardNumber }}</span>
    <span> {{ cardDetails.expiryDate }}</span>
  </span>
{% endmacro %}
