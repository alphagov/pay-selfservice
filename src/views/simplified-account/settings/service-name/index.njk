{% extends "../settings-layout.njk" %}

{% set addCyLink %}
  <a class='govuk-link govuk-link--no-visited-state' href='{{ manageCy }}' data-cy="add-welsh-name">Add Welsh service name</a>
{% endset %}

{% set settingsPageTitle = "Service name" %}

{% block settingsContent %}
  <h1 class="govuk-heading-l">Service name</h1>

  {{ govukSummaryList({
    classes: "govuk-!-margin-bottom-9",
    rows: [
      {
        key: {
        text: "Service name"
      },
        value: {
        text: serviceNameEn
      },
        actions: {
        items: [
          {
            href: manageEn,
            text: "Change",
            classes: "govuk-link--no-visited-state",
            visuallyHiddenText: "English service name",
            attributes: { 'data-cy': 'edit-english-name' }
          }
        ]
      }
      },
      {
        key: {
        text: "Welsh service name"
      },
        value: {
        html: '<span lang="cy">' + serviceNameCy + '</span>'
      } if serviceNameCy else {
        html: addCyLink
      },
        actions: {
        items: [
          {
            href: manageCy,
            text: "Change",
            classes: "govuk-link--no-visited-state",
            visuallyHiddenText: "Welsh service name",
            attributes: { 'data-cy': 'edit-welsh-name' }
          }
        ] if serviceNameCy else []
      }
      }
    ]
  }) }}
{% endblock %}
